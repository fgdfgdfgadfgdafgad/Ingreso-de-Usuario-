    }                                        

    private void btnlimpActionPerformed(java.awt.event.ActionEvent evt) {                                        
        txtnom.setText("");
        txtape.setText("");
        txtmail.setText("");
        txttel.setText("");
        txtfecha.setText("AAAA-MM-DD");
        cbxsex.setSelectedItem("Seleccione:");
    }                                       

